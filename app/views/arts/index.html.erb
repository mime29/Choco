<% content_for :javascript do %>
  <%= javascript_tag do %>
  // Sorting the list

  $(document).ready(function(){
    $('#arts').sortable({
      axis: 'y',
      dropOnEmpty: false,
      handle: '.handle',
      cursor: 'crosshair',
      items: 'li',
      opacity: 0.4,
      scroll: true,
      update: function(){
      $.ajax({
        type: 'post',
        data: $('#arts').sortable('serialize'),
        dataType: 'script',
        complete: function(request){
          $('#arts').effect('highlight');
        },
        url: '/arts/sort'})
      }
    });
  });
  <% end %>
<% end %>


<%- model_class = Art -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:file) %></th>
      <th><%= model_class.human_attribute_name(:gallery_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td><%= link_to art.id, art_path(art) %></td>
        <td><%= art.title %></td>
        <td><%= art.description %></td>
        <td><%= art.file %></td>
        <td><%= art.gallery_id %></td>
        <td><%=l art.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_art_path(art), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      art_path(art),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul id="arts">
<% for art in @arts %>
  <%= content_tag_for :li, art do %>
    <span class="handle">[drag]</span>
  <% end %>
<% end %>
</ul>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_art_path,
            :class => 'btn btn-primary' %>
