<h1>Listing galleries</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Likes</th>
    <th>Thumbnail</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @galleries.each do |gallery| %>
  <tr>
    <td><%= gallery.title %></td>
    <td><%= gallery.subtitle %></td>
    <td><%= gallery.likes %></td>
    <td><%= gallery.thumbnail %></td>
    <td><%= link_to 'Show', gallery %></td>
    <td><%= link_to 'Edit', edit_portfolio_gallery_path(gallery) %></td>
    <td><%= link_to 'Destroy', gallery, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

